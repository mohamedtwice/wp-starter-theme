<meta name="title" content="{{(title ?: site.title) | escape}}">
<meta name="description" content="{{(description ?: site.description) | escape}}">

<meta name="og:title" content="{{(title ?: site.title) | escape}}">
<meta name="og:description" content="{{(description ?: site.description) | escape}}">
{% if image %}<meta name="og:image" content="{{image}}">{% endif %}

{% if noindex %}<meta name="robots" content="noindex,follow">{% endif %}
